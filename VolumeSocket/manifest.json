{
	"manifest_version": 3,
	"name": "WebSocket Volume Control",
	"description": "Bidirectional volume control for YouTube pages",
	"version": "0.0.5",
	"permissions": ["tabs"],
	"background": {
		"service_worker": "background.js"
	},
	"externally_connectable": {
		"matches": ["https://*.youtube.com/*", "https://*.twitch.tv/*", "file:///*"]
	},
	"content_scripts": [{
		"world": "MAIN",
		"matches": ["https://music.youtube.com/*", "https://youtube.com/*", "https://www.youtube.com/*"],
		"js": ["volsock.js"]
	},
	{
		"exclude_globs": ["https://dashboard.twitch.tv/*", "https://dev.twitch.tv/*", "*.pdf"],
		"matches": ["file:///*", "https://*.twitch.tv/*"],
		"js": ["volsock.js"]
	}]
}
